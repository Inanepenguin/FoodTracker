<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mainLayout"
        android:focusable="true"
        android:background="@color/black"
        android:baselineAligned="true">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="347dp"
            android:focusableInTouchMode="true"
            android:longClickable="true"
            android:id="@+id/homeListContainer">

        <ListView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/homeList"
                android:layout_alignParentLeft="true"
                android:layout_above="@+id/mainAddMealButton"
                android:focusable="true"
                android:scrollbars="vertical"
                android:layout_alignBottom="@+id/mainAddMealButton"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_meal"
                android:id="@+id/mainAddMealButton"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:drawableLeft="@drawable/green_plus_md"
                android:onClick="addMealForToday"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 Day Totals"
                android:id="@+id/SevenDayTotalTag"
                android:textColor="@color/sevenDayText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textSize="22dp"
                android:phoneNumber="false"
                android:password="false"
                android:layout_marginLeft="4dp"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/SevenDayTotals"
                android:textSize="17dp"
                android:textColor="@color/sevenDayText"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/SevenDayTotalTag"
                android:layout_marginTop="3dp"/>
    </RelativeLayout>

</LinearLayout>